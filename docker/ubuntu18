FROM ubuntu:bionic

LABEL description="Container in which to build ubuntu applications"

ENV TZ=America/Glace_Bay
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN echo "deb http://archive.ubuntu.com/ubuntu bionic-backports main restricted universe multiverse" > /etc/apt/sources.list.d/bionic-backports

RUN apt update && apt install -y make build-essential fakeroot devscripts debhelper/bionic-backports
